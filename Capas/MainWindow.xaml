<Window x:Class="Capas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Capas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <DataGrid Name="McDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Center" VerticalAlignment="Center" Height="434" Width="600" Background="LightGray" RowBackground="LightYellow" AlternatingRowBackground="LightBlue" BorderBrush="Gray" BorderThickness="1" SelectionChanged="McDataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Width="150" Binding="{Binding txtName}" />
                <DataGridTextColumn Header="Precio" Width="150" Binding="{Binding txtPrice}" />
                <DataGridTextColumn Header="Stock" Width="150" Binding="{Binding txtStock}" />
                <DataGridTextColumn Header="Activo" Width="150" Binding="{Binding txtActive}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
